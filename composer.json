{
    "name"        : "src-run/arthur-doctrine-identity-library",
    "license"     : "MIT",
    "type"        : "library",
    "homepage"    : "https://src.run/arthur-doctrine-identity-library",
    "description" : "base identity entity classes (id- slug- uuid-based, etc)",
    "support" : {
        "email"  : "rmf@src.run",
        "issues" : "https://src.run/arthur-doctrine-identity-library/issues",
        "source" : "https://src.run/arthur-doctrine-identity-library/git"
    },
    "keywords"   : [
        "arthur-doctrine-identity-library", "arthur", "doctrine", "exception", "library", "rmf", "src-run"
    ],
    "authors"    : [
        {
            "name"    : "Rob Frawley 2nd",
            "email"   : "rmf@src.run",
            "homepage": "https://src.run/rmf",
            "role"    : "Project Lead"
        }
    ],
    "require" : {
        "php"                                       : "^5.6||^7.0",
        "ramsey/uuid"                               : "^3.0",
        "doctrine/common"                           : "^2.5",
        "src-run/augustus-reflection-library"       : "^0.6",
        "src-run/augustus-serializer-library"       : "^0.6",
        "src-run/arthur-doctrine-exception-library" : "^0.6"
    },
    "require-dev" : {
        "phpunit/phpunit"        : "^5.0",
        "codacy/coverage"        : "^1.0",
        "satooshi/php-coveralls" : "^1.0"
    },
    "suggest" : {
        "doctrine/orm" : "^2.5"
    },
    "autoload" : {
        "psr-4" : {
            "SR\\Doctrine\\ORM\\Mapping\\" : "lib/"
        }
    },
    "autoload-dev" : {
        "psr-4" : {
            "SR\\Doctrine\\ORM\\Mapping\\Tests\\" : "tests/"
        }
    },
    "minimum-stability" : "dev",
    "prefer-stable"     : true,
    "config": {
        "bin-dir" : "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master" : "0.6-dev"
        }
    }
}
